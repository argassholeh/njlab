<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".DetailKeluhan">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@drawable/recttoolbar"
        app:titleTextColor="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:id="@+id/ln_imageuser"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_detailfotodk"
                                android:layout_width="130dp"
                                android:layout_height="160dp"
                                android:src="@drawable/ic_orang_grey_24dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/viduser"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="ID USER"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_iduserdk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/v_nama"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Nama"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_namadk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textSize="12sp" />




                        <TextView
                            android:id="@+id/vnohp"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="No Telepon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nohp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textIsSelectable="true"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Lab"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_namalabdk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textSize="12sp" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Nama Barang"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_barangdk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textIsSelectable="true"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Status Barang"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp"

                            android:layout_marginBottom="3dp"
                            android:weightSum="3">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tvstatusbarang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#000"
                                    android:textIsSelectable="true"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ln_tvcek"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.2">

                                <TextView
                                    android:id="@+id/tvcek"
                                    android:textAlignment="textEnd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:id="@+id/ln_btncek"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="0.3"
                                android:gravity="center">
                              <Button
                                  android:padding="10dp"
                                  android:id="@+id/btncek"
                                  android:background="@drawable/ic_personmaintenance"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Tanggal"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tanggaldk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="3dp"
                            android:textColor="#000"
                            android:textIsSelectable="true"
                            android:textSize="12sp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvn_perbaiki"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Yang Memperbaiki"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_idperbaiki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="7dp"
                            android:textColor="#000"
                            android:textIsSelectable="true"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:id="@+id/imgTelp"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_telephone" />

                            <ImageView
                                android:id="@+id/imgPesan"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_message" />

                            <ImageView
                                android:id="@+id/imgWA"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_wa" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/v_keluhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keluhan"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_keluhandk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textSize="12sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/v_fotokerusakan"
                    android:text="Foto Kerusakan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/img_detailkerusakan"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />



                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimary" />
                <Button
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnhasilmaintenanca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rect1_2"
                    android:padding="15dp"
                    android:text="SELESAI DI PERBAIKI"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:drawableRight="@android:drawable/ic_menu_gallery"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto Hasil Maintenance"
                        android:id="@+id/btnfotoperbaiki" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_fotosudah"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Hasil di Perbaiki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/img_fotoperbaiki"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/no_image" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ln_operator"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_operator"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yang Memperbaiki"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_tambahOperator"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textColor="#000"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"/>
                    <Button
                        android:id="@+id/btntambah_operator"
                        android:background="@drawable/ic_add_black_24dp"
                        android:textAlignment="textEnd"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:id="@+id/tvItemSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>


                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnselesaidk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rect1_2"
                    android:padding="15dp"
                    android:text="SELESAI"
                    android:textColor="@color/white" />
                <Button
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="250dp"
                    android:id="@+id/btnaksesperbaiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rect1_2"
                    android:padding="15dp"
                    android:text="Perbaiki"
                    android:textColor="@color/white" />

                <Button
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnperbaikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rect1_2"
                    android:padding="15dp"
                    android:text="LAPORKAN"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>